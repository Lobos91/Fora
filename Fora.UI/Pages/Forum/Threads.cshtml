@page
@model Fora.UI.Pages.Forum.ThreadsModel

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css" integrity="sha256-46r060N2LrChLLb5zowXQ72/iKKNiw/lAmygmHExk/o=" crossorigin="anonymous" />
 <link rel="stylesheet" href="~/css/thread.css" asp-append-version="true" />

<div class="container">
<div class="main-body p-0">
    <div class="inner-wrapper">
        <!-- Inner sidebar -->
        <div class="inner-sidebar">
            <!-- Inner sidebar header -->
            <div class="inner-sidebar-header justify-content-center">
                <button class="btn btn-primary has-icon btn-block" type="button">
                    NEW DISCUSSION
                </button>
            </div>

            <!-- Inner sidebar body -->
            <div class="inner-sidebar-body p-0">
                <div class="p-3 h-100" data-simplebar="init">
                    <div class="simplebar-wrapper" style="margin: -16px;">
                        <div class="simplebar-height-auto-observer-wrapper"><div class="simplebar-height-auto-observer"></div></div>
                        <div class="simplebar-mask">
                            <div class="simplebar-offset" style="right: 0px; bottom: 0px;">
                                <div class="simplebar-content-wrapper" style="height: 100%; overflow: hidden scroll;">
                                    <div class="simplebar-content" style="padding: 16px;">
                                        <nav class="nav nav-pills nav-gap-y-1 flex-column">
                                            <a href="javascript:void(0)" class="nav-link nav-link-faded has-icon active">All Threads</a>
                                          
                                        </nav>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="simplebar-placeholder" style="width: 234px; height: 292px;"></div>
                    </div>
                    <div class="simplebar-track simplebar-horizontal" style="visibility: hidden;"><div class="simplebar-scrollbar" style="width: 0px; display: none;"></div></div>
                    <div class="simplebar-track simplebar-vertical" style="visibility: visible;"><div class="simplebar-scrollbar" style="height: 151px; display: block; transform: translate3d(0px, 0px, 0px);"></div></div>
                </div>
            </div>
        </div>
    
        <div class="inner-main">
            <!-- Inner main header -->
            <div class="inner-main-header style="padding: 10px"">
                <a class="nav-link nav-icon rounded-circle nav-link-faded mr-3 d-md-none" href="#" data-toggle="inner-sidebar"><i class="material-icons">arrow_forward_ios</i></a>

                <!-- SEARCH BAR -->
               <form method="get">
                   <div class="input-group">
                       <input  class="form-control" asp-for="SearchKey" />
                       <div class="input-group-append">
                           <button type="submit" class="btn btn-primary">Search</button>
                       </div>
                   </div>
               </form>


            </div>

            @*  <div class="container row-cols-sm-auto m-3">
                     <h4 class="card-title d-flex justify-content-center text-light">Threads for "@Model.Interest.Name"</h4>
               </div>*@

                <div class="container row-cols-sm-auto">
                        <div class="card col-10 m-3 border-secondary" style="padding: 10px">
                            <div class="card-block">
                               
                                <div class="d-flex justify-content-center">
                                    <div class="mb-3 m-3">
                                    @if (!@Model.Threads.Any())
                                    {
                                        <h3>No threads found</h3>
                                    }
                                    else
                                    {
                                        @foreach (var thread in @Model.Threads)
                                        {
                                            <h3>
                                            <a asp-page="/Forum/Topic" asp-route-id="@thread.Id">
                                                @thread.Name
                                            </a>
                                             </h3>

                                             <h5>Created by: @thread.User.Username</h5>

                                            <div class="text-muted small text-center align-self-center">
                                                <br />
                                                <span><i class="far fa-comment ml-2"></i> @thread.Messages.Count </span>
                                            </div>
                                        }
                                    }



                                </div>
                                </div>
                            </div>
                    </div>


    <!-- New Thread Modal -->
   <form method="post">
     
        <div asp-validation-summary="All"></div>
          
      
          <div class="mb-3">
            <label class="text-white" asp-for="ThreadToPost.Name"></label>     
            <input asp-for="ThreadToPost.Name"  class="form-control mb-4" type="text" placeholder="Thread name" />
            <span class="text-warning" asp-validation-for="ThreadToPost.Name"></span>
          </div>

           <div class="mb-3">
            <label class="text-white" asp-for="ThreadToPost.Messages[0].Message"></label>     
            <input asp-for="ThreadToPost.Messages[0].Message" class="form-control mb-4" type="text" placeholder="Message" />
            <span class="text-warning" asp-validation-for="ThreadToPost.Messages[0].Message"></span>
          </div>

        

        <button type="submit" class="btn btn-outline-light" >Post</button>
   </form>
   </div>
   </div>
</div>
</div>
</div>